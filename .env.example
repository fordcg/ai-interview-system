# 环境变量配置文件示例
# 复制此文件为 .env 并填入实际的配置值

# ===========================================
# 基础配置
# ===========================================
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# ===========================================
# 数据库配置
# ===========================================
# MySQL数据库连接
DATABASE_URL=mysql://interview_user:interview_pass@localhost:3306/interview_system

# Redis缓存连接
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AI服务配置
# ===========================================
# DeepSeek API配置
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 讯飞语音合成配置
XUNFEI_APP_ID=your-xunfei-app-id
XUNFEI_API_KEY=your-xunfei-api-key
XUNFEI_API_SECRET=your-xunfei-api-secret

# ===========================================
# 文件上传配置
# ===========================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# ===========================================
# 邮件服务配置（可选）
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# ===========================================
# 第三方登录配置（可选）
# ===========================================
# 微信登录
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# QQ登录
QQ_APP_ID=your-qq-app-id
QQ_APP_KEY=your-qq-app-key

# ===========================================
# 对象存储配置（可选）
# ===========================================
# 阿里云OSS
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_BUCKET_NAME=your-bucket-name
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com

# ===========================================
# 监控配置（可选）
# ===========================================
# Sentry错误监控
SENTRY_DSN=your-sentry-dsn

# ===========================================
# 前端配置
# ===========================================
VUE_APP_API_BASE_URL=http://localhost:5000
VUE_APP_TITLE=面试星途
VUE_APP_DESCRIPTION=AI驱动的智能面试系统

# ===========================================
# 开发环境配置
# ===========================================
# 是否启用调试模式
DEBUG=false

# 是否启用CORS
CORS_ENABLED=true

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================================
# 安全配置
# ===========================================
# 会话超时时间（秒）
SESSION_TIMEOUT=3600

# JWT令牌过期时间（秒）
JWT_ACCESS_TOKEN_EXPIRES=3600

# 密码加密轮数
BCRYPT_LOG_ROUNDS=12

# ===========================================
# 性能配置
# ===========================================
# 数据库连接池大小
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis连接池大小
REDIS_POOL_SIZE=10

# Gunicorn工作进程数
GUNICORN_WORKERS=4

# ===========================================
# 功能开关
# ===========================================
# 是否启用人脸检测
ENABLE_FACE_DETECTION=true

# 是否启用语音合成
ENABLE_TTS=true

# 是否启用AI分析
ENABLE_AI_ANALYSIS=true

# 是否启用缓存
ENABLE_CACHE=true

# 是否启用邮件通知
ENABLE_EMAIL_NOTIFICATION=false

# ===========================================
# API限流配置
# ===========================================
# 每分钟最大请求数
RATE_LIMIT_PER_MINUTE=60

# 每小时最大请求数
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# 备份配置
# ===========================================
# 数据库备份路径
BACKUP_PATH=/backups

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# ===========================================
# 注意事项
# ===========================================
# 1. 请确保所有密钥和密码都是强密码
# 2. 生产环境中请使用HTTPS
# 3. 定期更换密钥和密码
# 4. 不要将此文件提交到版本控制系统
# 5. 确保文件权限设置正确（600或更严格）
